<div class="row">
    <div class="col s12">
        <div class="card blue-grey darken-1 col s6 offset-s3">
            <div class="card-content white-text">
                <span class="card-title">Account Settings</span>
                <%= form_for @user do |f| %>
                    <div class="input-field">
                        <%= f.label :email  %>
                        <%= f.email_field :email  %>
                    </div>
                    <div class="input-field">
                        <%= f.label :password  %>
                        <%= f.password_field :password %>
                    </div>
                    <div class="input-field">
                        <%= f.label 'Re-enter Password'  %>
                        <%= f.password_field :password_confirmation %>
                    </div>
                    <div class="input-field">
                        <%= f.time_zone_select(:time_zone, ActiveSupport::TimeZone.us_zones) %>
                        <%= f.label :time_zone  %>
                    </div>
                    <%= f.submit 'Update Account', class: "brown btn" %>
                <% end %>
            </div>
            <div class="card-action">
                <%= link_to "Delete Account", @user, class: "red-text", data: {confirm: "Are you sure you want to permanently delete your account?"}, method: :delete  %>
            </div>
        </div>
    </div>
</div>
